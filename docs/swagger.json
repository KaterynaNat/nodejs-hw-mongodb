{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "Contacts API",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "description": "API для керування контактами (створення, редагування, видалення, отримання).\n"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    },
    {
      "url": "https://<твоє-посилання-на-render>"
    }
  ],
  "tags": [
    {
      "name": "Contacts",
      "description": "Все про контакти"
    },
    {
      "name": "Auth",
      "description": "Авторизація користувача"
    }
  ],
  "paths": {
    "/contacts": {
      "get": {
        "get": {
          "tags": [
            "Contacts"
          ],
          "summary": "Отримати список контактів",
          "operationId": "getContacts",
          "description": "Повертає всі контакти з можливістю фільтрації, сортування та пагінації",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "parameters": [
            {
              "name": "page",
              "in": "query",
              "schema": {
                "type": "integer"
              }
            },
            {
              "name": "perPage",
              "in": "query",
              "schema": {
                "type": "integer"
              }
            },
            {
              "name": "sortBy",
              "in": "query",
              "schema": {
                "type": "string"
              }
            },
            {
              "name": "sortOrder",
              "in": "query",
              "schema": {
                "type": "string",
                "enum": [
                  "asc",
                  "desc"
                ]
              }
            },
            {
              "name": "type",
              "in": "query",
              "schema": {
                "type": "string"
              }
            },
            {
              "name": "isFavourite",
              "in": "query",
              "schema": {
                "type": "boolean"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Успішна відповідь"
            }
          }
        }
      },
      "post": {
        "post": {
          "tags": [
            "Contacts"
          ],
          "summary": "Створити новий контакт",
          "operationId": "createContact",
          "description": "Додає новий контакт",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "../../components/Contact.yaml#/schemas/CreateContactInput"
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Контакт створено успішно"
            }
          }
        }
      }
    },
    "/contacts/{contactId}": {
      "get": {
        "get": {
          "tags": [
            "Contacts"
          ],
          "summary": "Отримати контакт за ID",
          "operationId": "getContactById",
          "description": "Повертає контакт за переданим ID",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "parameters": [
            {
              "name": "contactId",
              "in": "path",
              "required": true,
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Контакт знайдено"
            },
            "404": {
              "description": "Контакт не знайдено"
            }
          }
        }
      },
      "patch": {
        "patch": {
          "tags": [
            "Contacts"
          ],
          "summary": "Оновити контакт",
          "operationId": "updateContact",
          "description": "Часткове оновлення контакту",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "parameters": [
            {
              "name": "contactId",
              "in": "path",
              "required": true,
              "schema": {
                "type": "string"
              }
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "../../components/Contact.yaml#/schemas/UpdateContactInput"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Контакт оновлено"
            },
            "404": {
              "description": "Контакт не знайдено"
            }
          }
        }
      },
      "delete": {
        "delete": {
          "tags": [
            "Contacts"
          ],
          "summary": "Видалити контакт",
          "operationId": "deleteContact",
          "description": "Видаляє контакт за ID",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "parameters": [
            {
              "name": "contactId",
              "in": "path",
              "required": true,
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "204": {
              "description": "Контакт видалено"
            },
            "404": {
              "description": "Контакт не знайдено"
            }
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Реєстрація користувача",
        "operationId": "register",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Успішна реєстрація"
          },
          "409": {
            "description": "Email вже використовується"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Логін користувача",
        "operationId": "login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Успішна авторизація"
          },
          "401": {
            "description": "Невірна пошта або пароль"
          }
        }
      }
    },
    "/auth/refresh": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Оновлення access token за refresh token",
        "operationId": "refresh",
        "responses": {
          "200": {
            "description": "Новий access token"
          },
          "401": {
            "description": "Недійсний або прострочений refresh token"
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Вихід з системи (logout)",
        "operationId": "logout",
        "responses": {
          "204": {
            "description": "Сесія завершена"
          },
          "401": {
            "description": "Токен відсутній або недійсний"
          }
        }
      }
    },
    "/auth/send-reset-email": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Надіслати лист для скидання пароля",
        "operationId": "sendResetEmail",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ResetEmailInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Лист успішно надіслано"
          },
          "404": {
            "description": "Користувача не знайдено"
          }
        }
      }
    },
    "/auth/reset-pwd": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Скидання пароля",
        "operationId": "resetPassword",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ResetPwdInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Пароль скинуто успішно"
          },
          "401": {
            "description": "Токен недійсний або прострочений"
          },
          "404": {
            "description": "Користувача не знайдено"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "Contact": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "phoneNumber": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "isFavorite": {
            "type": "boolean"
          },
          "photo": {
            "type": "string"
          },
          "contactType": {
            "type": "string",
            "enum": [
              "work",
              "home",
              "personal"
            ]
          },
          "userId": {
            "type": "string"
          }
        }
      },
      "CreateContactInput": {
        "type": "object",
        "required": [
          "name",
          "phoneNumber",
          "contactType"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "phoneNumber": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "isFavorite": {
            "type": "boolean"
          },
          "contactType": {
            "type": "string",
            "enum": [
              "work",
              "home",
              "personal"
            ]
          }
        }
      },
      "UpdateContactInput": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "phoneNumber": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "isFavorite": {
            "type": "boolean"
          },
          "contactType": {
            "type": "string",
            "enum": [
              "work",
              "home",
              "personal"
            ]
          }
        }
      },
      "RegisterInput": {
        "type": "object",
        "required": [
          "name",
          "email",
          "password"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "format": "password"
          }
        }
      },
      "LoginInput": {
        "type": "object",
        "required": [
          "email",
          "password"
        ],
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "format": "password"
          }
        }
      },
      "ResetEmailInput": {
        "type": "object",
        "required": [
          "email"
        ],
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          }
        }
      },
      "ResetPwdInput": {
        "type": "object",
        "required": [
          "token",
          "password"
        ],
        "properties": {
          "token": {
            "type": "string"
          },
          "password": {
            "type": "string",
            "format": "password"
          }
        }
      }
    }
  }
}